# ================= Flask 配置 =================
# 运行环境（dev/prod/test）
FLASK_ENV=dev
# 调试模式（True/False）
FLASK_DEBUG=True
# 服务端口
FLASK_PORT=5000
# 服务主机
FLASK_HOST=0.0.0.0
# 密钥（生产环境请替换为随机复杂字符串）
SECRET_KEY=dev_secret_key_123456
# 数据库连接（示例）
DATABASE_URL=sqlite:///./dev.db

# ================= 日志配置 =================
# 日志级别：DEBUG/INFO/WARNING/ERROR/CRITICAL
LOG_LEVEL=DEBUG
# 日志轮转配置（轮转间隔天数）
LOG_ROTATION_DAYS=1
# 日志备份保留数量
LOG_BACKUP_COUNT=99999
# 日志名字
LOG_NAME=project_main